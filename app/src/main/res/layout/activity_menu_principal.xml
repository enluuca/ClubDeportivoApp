<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    tools:context=".MenuPrincipal">

    <View
        android:id="@+id/background_overlay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#99000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/header_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#00000000"
        android:orientation="vertical"
        android:padding="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <!-- 1. Logo del Club (NUEVO) -->

        <ImageView
            android:id="@+id/img_club_logo"
            android:layout_width="118dp"
            android:layout_height="94dp"
            android:layout_marginTop="64dp"
            android:contentDescription="Logo del Club"
            android:src="@drawable/ic_club_logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@android:color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CludDeportivoApp"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_welcome_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Hola, [Usuario]. ¡Bienvenido/a al menú principal!"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:textStyle="normal" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header_layout"
        app:layout_constraintVertical_bias="0.3">

        <Button
            android:id="@+id/card_clientes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#6792EE"
            android:paddingVertical="18dp"
            android:text="CLIENTES"
            android:textSize="18sp"
            android:textStyle="bold"
            app:cornerRadius="10dp"
            android:elevation="4dp" />

        <Button
            android:id="@+id/card_pagos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#6792EE"
            android:paddingVertical="18dp"
            android:text="PAGOS"
            android:textSize="18sp"
            android:textStyle="bold"
            app:cornerRadius="10dp"
            android:elevation="4dp" />

        <Button
            android:id="@+id/card_actividades"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#6792EE"
            android:paddingVertical="18dp"
            android:text="ACTIVIDADES"
            android:textSize="18sp"
            android:textStyle="bold"
            app:cornerRadius="10dp"
            android:elevation="4dp" />

        <Button
            android:id="@+id/card_listados"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#6792EE"
            android:paddingVertical="18dp"
            android:text="LISTADOS Y REPORTES"
            android:textSize="18sp"
            android:textStyle="bold"
            app:cornerRadius="10dp"
            android:elevation="4dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>