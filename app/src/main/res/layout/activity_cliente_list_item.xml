<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="4dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- 1. Indicador de Estado (Socio/NoSocio) -->
        <ImageView
            android:id="@+id/img_status_indicator"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:contentDescription="Indicador de estado de socio"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/ic_status_active" />

        <!-- 2. Nombre Completo -->
        <TextView
            android:id="@+id/tv_cliente_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#333333"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/img_status_indicator"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Pérez, Juan Carlos" />

        <!-- 3. DNI -->
        <TextView
            android:id="@+id/tv_cliente_dni"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textSize="14sp"
            android:textColor="#666666"
            app:layout_constraintEnd_toEndOf="@id/tv_cliente_name"
            app:layout_constraintStart_toStartOf="@id/tv_cliente_name"
            app:layout_constraintTop_toBottomOf="@id/tv_cliente_name"
            tools:text="DNI: 99.999.999" />

        <!-- 4. Estado de Socio -->
        <TextView
            android:id="@+id/tv_socio_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            android:background="@drawable/rounded_corner_bg"
            android:textSize="12sp"
            android:textStyle="italic"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/tv_cliente_dni"
            app:layout_constraintTop_toBottomOf="@id/tv_cliente_dni"
            tools:text="Socio Activo"
            tools:textColor="#4CAF50" />

        <!-- 5. Flecha de Navegación (para indicar que es clickeable) -->
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_chevron_right"
            android:contentDescription="Ver detalle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>