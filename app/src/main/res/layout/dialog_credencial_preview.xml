<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:background="#FFFFFF">

    <TextView
        android:id="@+id/tv_preview_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Previsualización de Credencial"
        android:textColor="#333333"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Contenedor donde se cargará la credencial.
         Usamos un FrameLayout para mantenerlo simple. -->
    <FrameLayout
        android:id="@+id/frame_credencial_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:padding="8dp"
        android:background="#F0F4F8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_preview_title" />

    <!-- Botón para Compartir (dentro del modal) -->
    <Button
        android:id="@+id/btn_share_from_preview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="COMPARTIR CREDENCIAL"
        android:backgroundTint="#009688"
        android:textColor="@android:color/white"
        app:cornerRadius="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/frame_credencial_container" />

</androidx.constraintlayout.widget.ConstraintLayout>
