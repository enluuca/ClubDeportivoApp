<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CludDeportivoApp"
                android:textColor="#3F51B5"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ðŸ…"
                android:gravity="end"
                android:textSize="24sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/tv_credencial_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#37474F"
            android:textSize="22sp"
            android:textStyle="bold"
            android:text="NOMBRE COMPLETO DEL CLIENTE"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/tv_credencial_dni"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#607D8B"
            android:textSize="16sp"
            android:text="DNI: 00000000"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MEMBRESÃA"
            android:textColor="#9E9E9E"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/tv_credencial_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="4dp"
            android:textColor="#4CAF50"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="SOCIO ACTIVO"
            android:maxLines="1"
            android:ellipsize="end" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Presentar esta credencial para el ingreso y uso de instalaciones."
            android:textColor="#BDBDBD"
            android:textSize="12sp"
            android:gravity="center_horizontal"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>